<% if current_user.nil? %>
    <% @clubs = BeerClub.all %>

    <table>
      <% @clubs.each do |club| %>
      <tr>
        <td><%= club.name %></td>
        <td><%= link_to 'join', new_membership_path(:beer_club_id => club.id, :user_id => current_user.id) %></td>
      </tr>
      <% end %>
    </table>
<% end %>
